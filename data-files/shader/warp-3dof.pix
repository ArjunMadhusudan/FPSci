#version 460
#include <g3dMath.glsl>

uniform sampler2D sourceTexture;

in vec2 g3d_TexCoord;

out vec3 result;

void main() {
	if (false && maxComponent(abs(gl_FragCoord.xy - g3d_FramebufferSize.xy / 2.0) / g3d_FramebufferSize.xy) > 0.4) {
		result = vec3(0.0);
	}
	else {
		result = texture(sourceTexture, g3d_TexCoord).rgb;
		vec2 centerAxisDist = abs(g3d_TexCoord.xy - 0.5);
		if (max(centerAxisDist.x, centerAxisDist.y) > 0.5)
			result = vec3(0.0);
	}
}